                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QualificationName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateStarted)
